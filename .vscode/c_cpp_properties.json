{
    "configurations": [
        {
            "name": "Mac",
            "includePath": [
                "${workspaceFolder}/**" // Helps intelliSense find headers
            ],
            "defines": [],
            "compilerPath": "/usr/bin/clang",
            "cStandard": "c89", // Yep, Codam uses very minimal C
            "cppStandard": "c++17",
            "intelliSenseMode": "macos-clang-x64",
            "configurationProvider": "ms-vscode.makefile-tools",
            "compilerArgs": [
                "-Wall",
                "-Werror",
                "-Wextra"
            ]
        }
    ],
    "version": 4
}
